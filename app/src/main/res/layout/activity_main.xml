<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="TextView"
            android:layout_width="350dp"
            android:layout_height="553dp"
            android:id="@+id/textView_chatView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="29dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="29dp" android:layout_marginStart="29dp" android:layout_marginBottom="33dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_typeUrMssg"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_typeUrMssg" android:layout_marginTop="586dp"

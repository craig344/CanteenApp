            android:layout_marginLeft="29dp" android:layout_marginStart="29dp" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="SEND"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_send"
            app:layout_constraintTop_toTopOf="@+id/textView_chatView" android:layout_marginTop="586dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp" app:layout_constraintStart_toEndOf="@+id/editText_typeUrMssg"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp" android:layout_marginBottom="72dp"

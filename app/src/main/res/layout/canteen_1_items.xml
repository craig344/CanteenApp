<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/canteen2_item1"
                        android:layout_width="213dp"
                        android:layout_height="163dp"
                        app:srcCompat="@drawable/Canteen1_item1" />

                <ImageView
                        android:id="@+id/canteen1_item2"
                        android:layout_width="214dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/Canteen1_item2" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen1_item1_text"
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Burger 1" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen1_item2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Burger2" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">

                    <Button
                        android:id="@+id/canteen1_item1_addButton"
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="+" />
                    <Button
                            android:id="@+id/canteen1_item1_deleteButton"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="-" />

                </LinearLayout>

            <LinearLayout
                    android:layout_width="218dp"
                    android:layout_height="33dp"
                    android:orientation="horizontal"
                    android:gravity="right">


                <Button
                        android:id="@+id/canteen1_item2_addButton"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                <Button
                        android:id="@+id/canteen1_item2_deleteButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="-" />
            </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:id="@+id/canteen1_item3"
                        android:layout_width="203dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/Canteen1_item3" />

                <ImageView
                        android:id="@+id/canteen1_item4"
                        android:layout_width="214dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/Canteen1_item4" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen1_item3_text"
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Burger4" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen1_item4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Burger3" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">

                    <Button
                            android:id="@+id/canteen1_item3_addButton"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="+" />
                    <Button
                            android:id="@+id/canteen1_item3_deleteButton"
                            android:layout_width="64dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="-" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <Button
                            android:id="@+id/canteen1_item4_addButton"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="+" />
                    <Button
                            android:id="@+id/canteen1_item4_deleteButton"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="-" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
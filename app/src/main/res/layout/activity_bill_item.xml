<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BillItemActivity">
    <LinearLayout
        android:background="@drawable/gradient_baround"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="HUNGER KEEDA"
            android:textColor="#FFA50A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="(Bill Details)"
            android:textColor="#FFA50A"
            android:textSize="10dp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="588dp"
        android:translationY="155px">

        <LinearLayout
            android:id="@+id/billItemLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="650dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/display_Total_amount"
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="1"
            android:text="Total Amount" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="â‚¹"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/billTotal"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
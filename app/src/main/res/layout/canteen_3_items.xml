<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
            android:background="@drawable/gradient_baround"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="right"
            android:orientation="horizontal">

        <TextView
                android:layout_width="262dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="#FFA50A"
                android:text="HUNGER KEEDA" />





        <ImageButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:src="@drawable/canteencart" />



    </LinearLayout>


    <ScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginBottom="10dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/canteen3_item1"
                        android:layout_width="213dp"
                        android:layout_height="163dp"
                        app:srcCompat="@drawable/canteen3_item1"/>

                <ImageView
                        android:id="@+id/canteen3_item2"
                        android:layout_width="197dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/canteen3_item2" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen3_item1_text"
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Waffels 1" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen3_item2_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="waffels 2" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">

                    <Button
                            android:id="@+id/canteen3_item1_addButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="+" />
                    <Button
                            android:id="@+id/canteen3_item1_deleteButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="-" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="192dp"
                        android:layout_height="33dp"
                        android:gravity="right"
                        android:orientation="horizontal">


                    <Button
                            android:id="@+id/canteen3_item2_addButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="+" />

                    <Button
                            android:id="@+id/canteen3_item2_deleteButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="-" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="142dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                <ImageView
                        android:id="@+id/canteen3_item3"
                        android:layout_width="215dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/canteen3_item3" />

                <ImageView
                        android:id="@+id/canteen3_item4"
                        android:layout_width="214dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/canteen3_item4" />


            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen3_item3_text"
                            android:layout_width="165dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="waffels 3" />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="218dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <TextView
                            android:id="@+id/canteen3_item4_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="waffels 4" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="216dp"
                        android:layout_height="33dp"
                        android:orientation="horizontal"
                        android:gravity="right">

                    <Button
                            android:id="@+id/canteen3_item3_addButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="+" />
                    <Button
                            android:id="@+id/canteen3_item3_deleteButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="-" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="195dp"
                        android:layout_height="33dp"
                        android:gravity="right"
                        android:orientation="horizontal">


                    <Button
                            android:id="@+id/canteen3_item4_addButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="+" />

                    <Button
                            android:id="@+id/canteen3_item4_deleteButton"
                            android:layout_width="53dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:background="@color/colorbutton"
                            android:textAlignment="center"
                            android:gravity="right"
                            android:text="-" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>